@page
@model PlayingForKeepers.Pages.Administration.RolesIndexModel
@{
    ViewData["Title"] = "RolesIndex";
}


@* Link to create a new role HTML *@
<p>
    <a asp-page="AddRole">Add Role</a>
</p>

@* Display all leagues HTML *@
@for (int i = 0; i < Model.Roles.Count; i++)
{
    <div class="card mb-3">
        <div class="card card-header">Role ID : @Model.Roles[i].Id</div>
        <div class="card-body">
            <h5 class="card-title">@Model.Roles[i].Name</h5>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-page="EditRole" asp-route-roleId="@Model.Roles[i].Id">Edit</a>
            <a class="btn btn-danger" asp-page="DeleteRole" asp-route-roleId="@Model.Roles[i].Id">Delete</a>
        </div>
    </div>
}


