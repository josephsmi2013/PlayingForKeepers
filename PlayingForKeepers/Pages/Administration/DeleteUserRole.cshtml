@page
@model PlayingForKeepers.Pages.Administration.DeleteUserRoleModel
@{
    ViewData["Title"] = "DeleteUserRole";
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Delete users from role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.GetUsers.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model.IsSelected[i]" class="form-check-input" />
                    <input hidden asp-for="@Model.GetUsers[i].Id" />
                    <label asp-for="@Model.IsSelected[i]" class="form-check-label">@Model.GetUsers[i].Email</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Remove" class="btn btn-primary" />
            <a asp-page="EditRole" asp-route-roleId="@Model.RoleId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>