@page
@model PlayingForKeepers.Pages.Administration.EditRoleModel
@{
    ViewData["Title"] = "EditRole";
}


@* Edit a role HTML*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input disabled asp-for="RoleId" class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-page="RolesIndex" class="btn btn-primary">Cancel</a>
            </div>

            <div class="card mb-3">
                <div class="card card-header">
                    <h3>Users with role</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        @for (int i = 0; i < Model.Users.Count; i++)
                        {
                            <h5 class="card-title">@Model.Users[i]</h5>
                        }
                    }
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-page="AddUserRole" asp-route-roleId="@Model.RoleId">Add Users</a>
                    <a class="btn btn-primary" asp-page="DeleteUserRole" asp-route-roleId="@Model.RoleId">Remove Users</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="RolesIndex">View Roles</a>
</div>
