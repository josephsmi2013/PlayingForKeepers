@page
@model PlayingForKeepers.Pages.Leagues.IndexModel
@{
    ViewData["Title"] = "LeagueIndex";
}

@* Link to create a new league HTML *@
<p>
    <a asp-page="CreateLeague">Add League</a>
</p>


@* Display all leagues HTML *@
<div class="row">
    <div class="col-md-offset-1 col-md-8">
        <section>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="text-align: center;">League ID</th>
                        <th style="text-align: center;">Name</th>
                        <th style="text-align: center;">Teams Used</th>
                        <th style="text-align: center;">Teams Possible</th>
                        <th style="text-align: center;">Owner ID</th>
                        <th style="text-align: center;">Status</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.GetLeagues.Count; i++)
                    {
                        <tr>
                            <td style="text-align: center;">@Model.GetLeagues[i].LeagueID</td>
                            <td style="text-align: center;">@Model.GetLeagues[i].LeagueName</td>
                            <td style="text-align: center;">@Model.GetLeagues[i].LeagueTeamsUsed </td>
                            <td style="text-align: center;">@Model.GetLeagues[i].LeagueTeamsPossible </td>
                            <td style="text-align: center;">@Model.GetLeagues[i].LeagueOwnerID </td>
                            <td style="text-align: center;">@Model.GetLeagues[i].LeagueStatus </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>