                            <th scope="col" style="text-align: center;">Activity Type</th>

                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.GetLeagueActivity.Count; i++)
                        {
                            <tr>
                                <td style="text-align: center;">@Model.GetLeagueActivity[i].LeagueActivityID</td>
                                <td style="text-align: center;">@Model.GetLeagueActivity[i].LeagueActivityDescription</td>
                                <td style="text-align: center;">@Model.GetLeagueActivity[i].LeagueActivityDate </td>
                                <td style="text-align: center;">@Model.GetLeagueActivity[i].LeagueActivityType </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>